{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",                                 
    "outDir": "./distJs", 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,             
    "strict": true,                         
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
